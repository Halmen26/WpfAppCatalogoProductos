<UserControl x:Class="WpfAppCatalogProduct.Views.Grafico"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
        xmlns:local="clr-namespace:WpfAppCatalogProduct.Views"
        xmlns:vm="clr-namespace:WpfAppCatalogProduct.ViewModels">
    
    <Grid>
        <TextBlock Text="Gráfico de Productos" FontSize="16" FontWeight="Bold" Margin="5"/>
        <lvc:PieChart
      Margin="20"
      Width="300"
      Height="300"
      LegendPosition="Bottom"
      TooltipPosition="Center"
      Series="{Binding PieSeries, Mode=OneWay}" />
    </Grid>
</UserControl>
